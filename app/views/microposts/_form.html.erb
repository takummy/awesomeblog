<%= form_for @micropost do |f| %>
		
	<%= render "shared/error_messages", object: f.object %>

	<div class="form-group">
		<%= f.label :content %>
		<%= f.text_area :content, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.file_field :picture, accept: 'image/jpeg, image/jpg, image/png', id: 'micropost_picture' %>
	</div>

	<div>
		<%= f.submit "Post", class: "btn btn-primary form-control" %>
	</div>
<% end %>

<script>
	$('#micropost_picture').bind('change', function() {
		var size_mb = this.files[0].size/1024/1024;

		if (size_mb > 2) {
			alert(' Maximum file size is 5mb. Please choose another file.');
		}
	});
</script>