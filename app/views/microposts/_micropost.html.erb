<li id="micropost-<%= micropost.id %>">
	<%= link_to gravatar_for(micropost.user, 50), micropost.user %>
	<span class="user"><%= micropost.user.name %></span>
	<span class="content">
		<%= micropost.content %>
		<%= image_tag micropost.picture.url if micropost.picture? %>	
	</span> 

	<span class="timestamp">
		<%= time_ago_in_words(micropost.created_at) %> ago

		<% if current_user?(micropost.user) %>
			<%= link_to "delete", micropost_path(micropost), 
								method: :delete, 
			 					data: { confirm: "Are you sure?" } %>
		<% end %>
	</span>

	<section class="vote">
	<%= render "microposts/vote_form", micropost: micropost %>
	</section>
</li>